
  <div class="ui grid">
    <div class="ui ten wide column">
      <div class="ui stacked fluid form segment">
        <form action="/adduser" method="POST">
          <h3 class="ui header">Add new User</h3>
          <div class="two fields">
            <div class="field">
              <label>First Name</label>
              <input placeholder="First Name" type="text" name="firstName">
            </div>
            <div class="field">
              <label>Last Name</label>
              <input placeholder="Last Name" type="text" name="lastName">
            </div>
          </div>
          <div class="field">
            <label>Email</label>
            <input placeholder="Email" type="text" name="email">
          </div>
          <div class="field">
            <label>Password</label>
            <input type="password" name="password">
          </div>
          <div class="field">
            <label>Account type</label>
            <select class="ui dropdown" name="admin" id="admin"  aria-placeholder="Account type">
                   <option value="false" name="false" id="false">User</option>
                   <option value="true" name="true" id="true">Admin</option>
            </select>
          </div>
          <button class="ui blue submit button">Submit</button>
        </form>
        {{> error}}
      </div>
    </div>
    <aside class="ui five wide column">
      <img src="https://res.cloudinary.com/jimtheenchanter/image/upload/v1580301607/icons/Email-icon.png" class="ui medium image">
    </aside>
  </div>
