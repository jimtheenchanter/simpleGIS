<section class="ui raised segment">
  <div class="ui grid ">
    <div class="ui form six wide column">
      <div class="ui stacked segment">
        <form action="/property" method="POST">
                   <input type="hidden" name="eircode">
         
                    <div class="field">
                        <label>Eircode</label>
                        <input type="text" name="eircode" >
                    </div>

                     <div class="ui header">Geo Location</div>
                <div class="ui two fields">
