
 
    <div class="ui form">
     <div class="ui stacked segment">
        <form action="/property" method="POST">
                   {{!-- <input type="hidden" name="property"> --}}
         
    <div class="ui header">
      <h4>
        Add a premises
      </h4>
          </div>
                    <div class="field">
                        <label>Eircode</label>
                        <input type="text" id="eircode" name="eircode" >
                        <div id="eircode-finder"> <a href="https://www.eircode.ie/" target="_blank" newwindow="true"><em>Eircode Finder</em></a></div>
                    </div>

              <div class="field">
                        <label>Address</label>
                        <input type="text" id="address" name="address" >
                    </div>
                <div class="field">
                <label>Comments</label>
                <textarea id="comments" name="comments"></textarea>
               </div>

               <div class="field">
                 <label for="color">Marker Color</label>
                 <select class="ui dropdown" id="color" name="color" aria-placeholder="Choose colour">
                   <option value="greenIcon" name="greenIcon" id="greenIcon">Green</option>
                   <option value="yellowIcon" name="yellowIcon" id="yellowIcon">Yellow</option>
                   <option value="redIcon" name="redIcon" id="redIcon">Red</option>
                  </select>
              </div>
                   
                   <div class="ui caption">Enter the coordinates of the property or just click on the map.</div>
                    <div class="ui two fields">
                     
                     <div class="field">
                         <div class="ui text box">
                            <label>Longitude </label>
                            <input type="text" id="long" name="long" placeholder="0.000000" accept="integer/*" maxlength="20">
                        </div>
                    </div>

                     <div class="field">
                        <div class="ui text box">
                            <label>Latitude </label>
                            <input type="text" id="lat" name="lat" placeholder="0.000000" accept="integer/*" maxlength="20">
                        </div>
                      </div>
                    </div>
                  
           <button class="ui blue submit button"> + Add </button>
        </form>
             {{> error }}
      </div>
    </div>
   