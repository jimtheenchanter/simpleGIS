{{#if admin}}
{{> adminmenu _id="settings" }}
{{else}}
{{> mainmenu _id="settings" }}
{{/if}}



<div class="settings-form">
      <div class="ui stacked fluid form segment">
        <form action="/settings" method="POST">
        
          <h3 class="ui header"><i class="ui user large icon"></i>Update User Details </h3>
          <div class="two fields">
            <div class="field">
              <label>First Name</label>
              <input value="{{user.firstName}}" type="text" name="firstName" >
            </div>
            <div class="field">
              <label>Last Name</label>
              <input value="{{user.lastName}}" type="text" name="lastName" placeholder="{{user.lastName}}">
            </div>
          </div>
          <div class="field">
            <label>Email</label>
            <input value="{{user.email}}" type="text" name="email" placeholder="{{user.email}}">
          </div>
          <div class="field">
            <label>Password</label>
            <input value="{{user.password}}" type="password" name="password" placeholder="">
          </div>
          <button class="ui fluid large submit button"><i class="ui check icon"></i>Update</button>
        
        </form>
        {{> error }}
      </div>
  </div>

